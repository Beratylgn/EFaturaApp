@model EFaturaApp.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="mt-4 ms-0" style="width:400px; text-align:left;">
    <h2>Ürün Düzenle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="StockCode" class="form-label">Stok Kodu</label>
            <input asp-for="StockCode" class="form-control form-control-sm" style="width:300px;" />
            <span asp-validation-for="StockCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Ürün Adı</label>
            <input asp-for="Name" class="form-control form-control-sm" style="width:300px;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Birim</label>
            <div class="input-group" style="width:300px;">
                <input asp-for="UnitQuantity" class="form-control form-control-sm"
                       type="number" min="1" style="width:70px;" />
                <select asp-for="Unit" class="form-select form-select-sm" style="width:120px;">
                    <option value="Adet" selected="@(Model.Unit == "Adet")">Adet</option>
                    <option value="Kilogram" selected="@(Model.Unit == "Kilogram")">Kilogram</option>
                    <option value="Ton" selected="@(Model.Unit == "Ton")">Ton</option>
                    <option value="Metre" selected="@(Model.Unit == "Metre")">Metre</option>
                    <option value="Santimetre" selected="@(Model.Unit == "Santimetre")">Santimetre</option>
                </select>
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Birim Fiyat</label>
            <div class="input-group" style="width:300px;">
                <input asp-for="UnitPrice" class="form-control form-control-sm"
                       type="number" step="0.01" style="width:100px;" />
                <select asp-for="Currency" class="form-select form-select-sm" style="width:80px;">
                    <option value="TRY" selected="@(Model.Currency == "TRY")">₺ TL</option>
                    <option value="USD" selected="@(Model.Currency == "USD")">$ USD</option>
                    <option value="EUR" selected="@(Model.Currency == "EUR")">€ EUR</option>
                    <option value="GBP" selected="@(Model.Currency == "GBP")">£ GBP</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
