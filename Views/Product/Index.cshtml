@model List<EFaturaApp.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-4">
    <h2>Ürünler</h2>

    <!-- Arama Formu -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group" style="max-width:400px;">
            <input type="text" name="searchString" value="@ViewBag.SearchString"
                   class="form-control" placeholder="Stok kodu veya adını girin..." />
            <button type="submit" class="btn btn-primary">Ara</button>
        </div>
    </form>


    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Ürün Ekle</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Stok Kodu</th>
                <th>Ürün Adı</th>
                <th>Miktar</th>
                <th>Birim</th>
                <th>Birim Fiyat</th>
                <th>Toplam Tutar</th>
                <th>Para Birimi</th>
                <th>Kayıt Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var p in Model)
                {
                    var total = (p.UnitQuantity ?? 0) * (p.UnitPrice ?? 0);
                    <tr>
                        <td>@(string.IsNullOrEmpty(p.StockCode) ? "-" : p.StockCode)</td>
                        <td>@(string.IsNullOrEmpty(p.Name) ? "-" : p.Name)</td>
                        <td>@(p.UnitQuantity ?? 0)</td>
                        <td>@(string.IsNullOrEmpty(p.Unit) ? "-" : p.Unit)</td>
                        <td>@(p.UnitPrice.HasValue? p.UnitPrice.Value.ToString("N2") : "-")</td>
                        <td>@total.ToString("N2")</td>
                        <td>@(string.IsNullOrEmpty(p.Currency) ? "-" : p.Currency)</td>
                        <td>@(p.CreateDate.HasValue? p.CreateDate.Value.ToShortDateString() : "-")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">Kayıtlı ürün bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Sayfalandırma -->
    <div class="mt-3">
        <nav>
            <ul class="pagination">
                @{
                    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalRecords / ViewBag.PageSize);
                    for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-searchString="@ViewBag.SearchString">
                                @i
                            </a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>
